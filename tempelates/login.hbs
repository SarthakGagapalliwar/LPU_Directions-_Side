  <body>
        <div class="container-fluid">
            <form class="mx-auto" action="/login" method="post">
                <h4 class="text-center">Login</h4>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label" >Registaion-no</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" name="reg-no" placeholder="Enter the Registaion-no">
